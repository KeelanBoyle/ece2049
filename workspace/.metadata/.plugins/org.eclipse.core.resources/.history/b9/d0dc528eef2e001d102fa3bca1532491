{
		0xffffff, 0x000000
};

const uint8_t Alien_Pixel_Data[] = {
		0b11110001,
		0b11111111,
		0b00111111,
		0b11010000,
		0b01111111,
		0b00100101,
		0b11111100,
		0b00101111,
		0b11100001,
		0b11111111,
		0b00001011,
		0b11110010,
		0b01011111,
		0b01000001,
		0b11111000,
		0b11000111,
		0b11111100
		0b01111111
};

const Graphics_Image Alien_Sprite = {
		IMAGE_FMT_1BPP_UNCOMP,
