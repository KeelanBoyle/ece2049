{
		0xffffff, 0x000000
};

const uint8_t Alien_Pixel_Data[] = {
		0b00010000, 0b01000001, 0b00010000, 0b01111111, 0b00011011, 0b10110111, 0b11111111, 0b10111111, 0b10110100, 0b00010100, 0b01101100
};

const Graphics_Image Alien_Sprite = {
		IMAGE_FMT_1BPP_UNCOMP,
		11,
