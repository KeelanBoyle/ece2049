#ifndef GRAPHICS_H
#define GRAPHICS_H

#include "grlib.h"

static const uint32_t palette[] =
{
		0xffffff, 0x000000
};

const uint8_t Alien_Pixel_Data[] = {
		0b11110001,
		0b11111111,
		0b00111111,
		0b11010000,
		0b01111111,
		0b00100101,
		0b11111100,
		0b00111111,
		0b11100001,
		0b01111110,
		0b01001011,
		0b11101000,
		0b00111111,
		0b00011000,
		0b11111000,
		0b01110111
};

const Graphics_Image Alien_Sprite = {
		IMAGE_FMT_1BPP_UNCOMP,
		16,
		8,
		2,
		palette,
		Alien_Pixel_Data
};

#endif
